    input, textarea, select {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border-radius: 10px;
        border: 1px solid #ccc;
        background-color: #fff;
        font-size: 16px;
        text-align: center;
    }

    textarea {
        height: 100px;
    }

    /* Form section titles */
    /* .form-section {
        display: flex;
        align-items: center;
        justify-content: space-between;
        font-size: 18px;
        font-weight: bold;
        color: white;
        background-color: #ff5f57;
        border-radius: 10px;
        padding: 10px;
        margin-bottom: 20px;
        width: 100%;
    } */

    /* Submit button styling */
    .btn {
        width: 100%;
        padding: 15px;
        background-color: #e53935;
        color: white;
        font-size: 18px;
        font-weight: bold;
        text-align: center;
        border: none;
        border-radius: 25px;
        cursor: pointer;
        margin-top:20px;
    }

    .btn:hover {
        background-color: #d32f2f;
    }
    
    h1, h3 {
        color:orange;
    }

/* sign up button */
    .toregistration {
        width: 40%;
        padding: 15px;
        background-color: #FF8d21;
        color: white;
        font-size: 18px;
        font-weight: bold;
        text-align: center;
        border: none;
        border-radius: 25px;
        cursor: pointer;
    }

    .toregistration:hover {
        background-color: #f77d11;
    }
    

    /* Container for the welcome screen */
    .welcome-container {
        background-color: #f0f0f0;
        width: 400px;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    /* Welcome header styling */
    .welcome-header {
        /* background: linear-gradient(90deg, #ff5f57, #ff8a65); */
        background:#f0f0f0;
        padding: 20px;
        border-radius: 15px 15px 0 0;
        color: white;
        font-size: 24px;
        font-weight: bold;
        /* text-align: left; */
        /* text-transform: uppercase; */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items:center;
        height: 200px;
    }

    .welcome-header img {
        max-width: 95%; /* Scale the image to 80% of the container width */
        max-height: 195px; /* Limit the height for better control */
        margin: auto; /* Center the image */
        align-self: center; /* Center within the flex container */
    }



</style>

    <div class="welcome-container">
        <!-- Welcome Header -->
        <div class="welcome-header">
            <img class = "runnerslogo" src="{{ asset('pubimages/rb_2150985777.png') }}" alt="Logo">
            {# <p>What would you like to do today?</p> #}
        </div>
        <h1>SOLEMATE</h1>
        <h3>TAKING CARE OF<br>YOUR FOOTWEAR</h3>
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            {# <h1>SOLEMATE</h1>
            <h3>TAKING CARE OF YOUR FOOTWEAR</h3> #}
            <label for="username">Email</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
            <br>
            <label for="password">Password</label>
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            <br>
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <input type="checkbox" name="_remember_me" id="_remember_me">
                    <label for="_remember_me">Remember me</label>
                </div>
            #}

            <button class="btn btn-lg btn-primary" type="submit">
                Login
            </button>
        </form>
        <div class= "bottom">
            <h4>Don't have an account?</h4>
            <a href="{{ path('app_register') }}"><button class="toregistration">Sign up!</button></a>
        </div>
    </div>
{% endblock %}
