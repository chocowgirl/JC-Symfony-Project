        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    img {
        justify-self:center;
    }

    /* Form container */
    form {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #e0e0e0;
        border-radius: 10px;
        padding: 20px;
        max-width: 400px;
        margin: 0 auto;
    }

    /* Input fields and labels */
    label {
        display: block;
        margin-top: 15px;
        /* font-weight: bold; */
    }

    /* input[type="text"], textarea, select {
        width: 100%;
        padding: 10px;
