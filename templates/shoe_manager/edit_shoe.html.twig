<style>
    /* General container styling */

    body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    /* Form container */
    form {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #e0e0e0;
        border-radius: 10px;
        padding: 20px;
        max-width: 400px;
        margin: 0 auto;
    }

    /* Input fields and labels */
    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    input, textarea, select {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border-radius: 10px;
        border: 1px solid #ccc;
        background-color: #fff;
        font-size: 16px;
        text-align: center;
    }

    textarea {
        height: 100px;
    }

    /* Container for the welcome screen */
    .welcome-container {
        background-color: #f0f0f0;
        width: 400px;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    /* Form section titles */
    .form-section {
        display: flex;
        align-items: center;
        justify-content: space-between;
        font-size: 18px;
        font-weight: bold;
        color: white;
        background-color: #ff5f57;
        border-radius: 10px;
        padding: 10px;
        margin-bottom: 20px;
        width: 100%;
    }

    /* Submit button styling */
    .btn {
        width: 100%;
        padding: 15px;
        background-color: #e53935;
        color: white;
        font-size: 18px;
        font-weight: bold;
        text-align: center;
        border: none;
        border-radius: 25px;
        cursor: pointer;
    }

