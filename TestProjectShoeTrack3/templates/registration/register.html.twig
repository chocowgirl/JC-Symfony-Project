    /* Submit button styling */
    .btn {
        width: 100%;
        padding: 15px;
        background-color: #e53935;
        color: white;
        font-size: 18px;
        font-weight: bold;
        text-align: center;
        border: none;
        border-radius: 25px;
        cursor: pointer;
        margin-top:20px;
    }

    .btn:hover {
        background-color: #d32f2f;
    }
    
    h1, h3 {
        color:orange;
    }

    
    /* Container for the welcome screen */
    .welcome-container {
        background-color: #f0f0f0;
        width: 400px;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    /* Welcome header styling */
    .welcome-header {
        /* background: linear-gradient(90deg, #ff5f57, #ff8a65); */
        background:#f0f0f0;
        padding: 20px;
        border-radius: 15px 15px 0 0;
        color: white;
        font-size: 24px;
        font-weight: bold;
