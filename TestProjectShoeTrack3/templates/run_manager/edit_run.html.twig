        .homeButton {
			background-color:#999999;
			width : 50px;
			height : 50px;
			border-radius: 25px;
			text-align:center;
			border-color: dark-gray;
			border-style: solid;
			border-width: 1px;
		}

        .homeIcon {
			width:30px;
		}

        .delete-btn {
        width: 100%;
        padding: 15px;
        background-color: #FF8d21;
        color: white;
        font-size: 18px;
        font-weight: bold;
        text-align: center;
        border: none;
        border-radius: 25px;
        cursor: pointer;
        }

        .delete-btn:hover {
        background-color: #f77d11;
        }

        /* Welcome header styling */
		.welcome-header {
			background: linear-gradient(90deg, #ff5f57, #ff8a65);
			padding: 20px;
			border-radius: 15px;
			color: white;
			font-size: 24px;
			font-weight: bold;
			text-align: left;
			/* text-transform: uppercase; */
		}
	</style>

<!-- Top section with edit run icons -->
<div class="welcome-container">
    <div class="welcome-header">
        <button class="homeButton">
            <a href="{{ path('app_welcome')}}">
                <img class="homeIcon" src="{{ asset('pubimages/home-2.svg') }}" alt = "Go to Homescreen">
            </a>
        </button>
        <h2>EDIT RUN</h2>
    </div>

    {{ form_start (form) }}
    {{ form_widget (form) }}



    <input type="submit" class="btn" value="Submit Edit" />
    {{ form_end (form) }}

    <!-- Delete button that points to the delete route -->
    <form method="post" action="{{ path('delete_activity', {'id': form.vars.value.id}) }}" onsubmit="return confirm('Are you sure you want to delete this run? This action cannot be undone.');">
        <input type="hidden" name="_method" value="DELETE">
        <button class="delete-btn">Delete Run üóëÔ∏è</button>
    </form>
