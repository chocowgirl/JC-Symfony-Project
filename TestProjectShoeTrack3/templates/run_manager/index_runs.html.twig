{% extends 'base.html.twig' %}

{% block title %}Hello RunManagerController!
{% endblock %}

{% block body %}

	<style>
		body{
			/* font-family: Arial, sans-serif;
            background-color: #f0f0f0; */
            display: flex;
            justify-content: center;
            /* align-items: center; */
            height: 100vh;
		}

		.runlegend {
			display: flex;
			padding:10px
			width:400px;
			font-family: Arial, sans-serif;
			margin:10px
		}

		.runlegendItem {
			text-align:center;
			color:white;
			padding:3px;
			border-radius:10px;
			min-width: 80px;
			background-color: #e53935;
			margin:10px;
		}

		.container {
			display: flex;
			flex:1;
			flex-wrap: wrap;
			background-color: #f0f0f0;
			border-radius: 15px;
			border-color: gray;
			border-style: solid;
			border-width: 1px;
			padding: 10px;
			width: 400px;
			gap: 10px;
			font-family: Arial, sans-serif;
			margin:10px;
		}

		.item {
			background-color: #a0a0a0;
			border-radius: 10px;
			padding: 10px;
			text-align: center;
			flex: 1;
			min-width: 80px;
			color:white;
		}

		.item-large {
			flex: 2;
			background: linear-gradient(90deg, orange, red);
			color: white;
			border-radius: 10px;
			padding: 10px;
			display: flex;
			align-items: center;
			justify-content: center;
		}

		.notes {
			background-color: #a0a0a0;
			border-radius: 10px;
			padding: 10px;
			text-align: left;
			flex: 1;
			min-width: 300px;
			color:white;
		}
		.edit-button {
			background-color: #e53935;
			color: white;
			font-weight: bold;
			border: none;
			padding: 10px;
			border-radius: 10px;
			cursor: pointer;
			display: flex;
			align-items: center;
			justify-content: center;
		}
		.edit-button img {
			width: 16px;
			height: 16px;
			margin-right: 5px;
		}

        button {
            background-color: red;
            color: white;
        }

		.btnContainer {
			display:flex;
			width: 500px;
			height: 50
		}

		.homebtn {
			background-color:#a0a0a0;
			width : 30px;
			height : 30px;
			border-radius: 15px;
			text-align:center;
			border-color: dark-gray;
			border-style: solid;
			border-width: 1px;
		}

		.createRunBtn, .runStatsBtn {
			background-color: #a0a0a0;
			border-radius: 10px;
			border-color: dark-gray;
			border-style: solid;
			border-width: 1px;
			padding: 5px;
			text-align: center;
			min-width: 90px;
			margin-left: 50px;
		}

		
	</style>
	

	{# <div class="welcome-container"> #}
		<div class='btnContainer'>
			<div class="homebtn">
				<a href="{{ path('app_welcome')}}">üè†</a>
			<div>

			<div class="createRunBtn">
				<a href="{{ path ('create_activity') }}">Add new run</a>
			</div>

			<div class="runStatsBtn">
				<a href="{{ path ('search_activities') }}">Run Statistics</a>
			</div>
		</div>

		<div class="runlegend">
			<div class="runlegendItem">Date</div>
			<div class="runlegendItem">Dist.</div>
			<div class="runlegendItem">Chrono</div>
			<div class="runlegendItem">Shoe</div>
		</div>
		{% for activity in activities %}

			<div class="container">
				<div class="item">
					{{ activity.activityDate.format("Y/m/d") }}
				</div>
				<div class="item">
					{{ activity.activityDistanceKm }}
				</div>
				<div class="item">
					{{ activity.activityChronoMin }}
				</div>
				{# {{ dump (activity.shoepairUsed)}} #}
				{# {{ dump (activity.activityDate)}} #}
				<div class="item-large">
					{{ activity.shoepairUsed.nameBrandModel }}
				</div>
				<div class="edit-button">
					{# <button>edit</button> #}
					<a href="{{ path('update_activity', {id: activity.id} )}}">edit</a>
				</div>
				<div class="notes">
					{{activity.activityNote }}
				</div>
			</div>
		{# </div> #}

	{% endfor %}

{% endblock %}
