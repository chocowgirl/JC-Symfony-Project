{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<style>

    /* General styling for the body */
    body {
        /* font-family: Arial, sans-serif; */
        /* background-color: #f0f0f0; */
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    /* Form container */
    form {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #e0e0e0;
        border-radius: 0px 0px 10px 10px;
        padding: 20px;
        max-width: 400px;
        margin: 0 auto;
    }

    /* Input fields and labels */
    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    input[type="text"], textarea, select {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border-radius: 10px;
        border: 1px solid #ccc;
        background-color: #fff;
        font-size: 16px;
        text-align: center;
    }

    textarea {
        height: 100px;
    }

    /* Form section titles */
    .form-section {
        display: flex;
        align-items: center;
        justify-content: space-between;
        font-size: 18px;
        font-weight: bold;
        color: white;
        background-color: #ff5f57;
        border-radius: 10px;
        padding: 10px;
        margin-bottom: 20px;
        width: 100%;
    }

    /* Submit button styling */
    .btn {
        width: 100%;
        padding: 15px;
        background-color: #e53935;
        color: white;
        font-size: 18px;
        font-weight: bold;
        text-align: center;
        border: none;
        border-radius: 10px;
        cursor: pointer;
    }

    .btn:hover {
        background-color: #d32f2f;
    }

    /* Home button styling */
    .homebtn {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }

    .homebtn a {
        display: inline-block;
        background-color: #a0a0a0;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        text-align: center;
        line-height: 40px;
        color: white;
        font-size: 20px;
        text-decoration: none;
    }

    /* Icon styling for top section */
    .header-icons {
        display: flex;
        justify-content: space-between;
        padding: 20px;
        background-color: #ff5f57;
        border-radius: 10px;
        color: white;
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 30px;
        max-width: 400px;
        margin: 0 auto;
    }

    .header-icons div {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 50px;
        height: 40px;
        border-radius: 45%;
        background-color: #ffffff;
        color: #ff5f57;
        font-size: 24px;
        margin-right: 10px;
    }

    /* Container for the welcome screen */
    .welcome-container {
        background-color: #f0f0f0;
        width: 400px;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    /* Welcome header styling */
    .welcome-header {
        /* background: linear-gradient(90deg, #ff5f57, #ff8a65); */
        background:white;
        padding: 20px;
        border-radius: 15px 15px 0 0;
        color: white;
        font-size: 24px;
        font-weight: bold;
        /* text-align: left; */
        /* text-transform: uppercase; */
        justify-content: center;
    }

    /* .runnerslogo {
        width:90%;
        height:auto;
    } */

</style>

    <!-- Top section with edit shoe icons -->

    <div class="welcome-container">
        <!-- Welcome Header -->
        <div class="welcome-header">
            <img class = "runnerslogo" src="{{ asset('pubimages/rb_2150985777.png') }}" alt="Logo">
            {# <p>What would you like to do today?</p> #}
        </div>
            
            {# <br> #}
            {# <img class = "runnerslogo" src="{{ asset('pubimages/rb_2150985777.png') }}" alt="Logo"> #}

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">SOLEMATE</h1>
            <h3>TAKING CARE OF YOUR FOOTWEAR</h3>
            <label for="username">Email</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
            <br>
            <label for="password">Password</label>
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            <br>
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <input type="checkbox" name="_remember_me" id="_remember_me">
                    <label for="_remember_me">Remember me</label>
                </div>
            #}

            <button class="btn btn-lg btn-primary" type="submit">
                Login
            </button>
        </form>
        <h4>Don't have an account?</h4>
        <a href="{{ path('app_register') }}"><button class"toregistration">Sign up!</button></a>
    </div>
{% endblock %}
