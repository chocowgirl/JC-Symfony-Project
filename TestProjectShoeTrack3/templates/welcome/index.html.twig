<style>
    /* General styling for the body */
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    /* Container for the welcome screen */
    .welcome-container {
        background-color: #f0f0f0;
        width: 400px;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    /* Welcome header styling */
    .welcome-header {
        background: linear-gradient(90deg, #ff5f57, #ff8a65);
        padding: 20px;
        border-radius: 15px 15px 0 0;
        color: white;
        font-size: 24px;
        font-weight: bold;
        /* text-transform: uppercase; */
    }

    .welcome-header .icon {
        font-size: 30px;
        margin-right: 10px;
    }

    /* Main action icons and links */
    .action-container {
        margin: 20px 0;
    }

    .action-item {
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #ffe0b2;
        border-radius: 50%;
        width: 100px;
        height: 100px;
        margin: 10px auto;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .action-item img {
        width: 60px;
        height: 60px;
    }

    .action-item:hover {
        background-color: #ff8a65;
    }

    .action-text {
        font-size: 16px;
        color: #ff5f57;
        margin-top: 10px;
    }

    /* Button styling for logout */
    .logout-btn {
        background-color: #757575;
        color: white;
        font-size: 16px;
        padding: 10px 20px;
        border-radius: 30px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: none;
        cursor: pointer;
        margin-top: 20px;
    }

    .logout-btn img {
        width: 16px;
        height: 16px;
        margin-left: 5px;
    }
</style>

