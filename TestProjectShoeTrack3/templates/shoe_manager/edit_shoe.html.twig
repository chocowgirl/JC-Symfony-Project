    /* Form container */
    form {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #e0e0e0;
        border-radius: 10px;
        padding: 20px;
        max-width: 400px;
        margin: 0 auto;
    }

    /* Input fields and labels */
    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    input[type="text"], textarea, select {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border-radius: 10px;
        border: 1px solid #ccc;
        background-color: #fff;
        font-size: 16px;
        text-align: center;
    }

    textarea {
        height: 100px;
    }

    /* Form section titles */
    .form-section {
        display: flex;
        align-items: center;
        justify-content: space-between;
        font-size: 18px;
        font-weight: bold;
        color: white;
        background-color: #ff5f57;
        border-radius: 10px;
        padding: 10px;
        margin-bottom: 20px;
        width: 100%;
    }

    /* Submit button styling */
    .btn {
        width: 100%;
        padding: 15px;
        background-color: #e53935;
        color: white;
        font-size: 18px;
        font-weight: bold;
        text-align: center;
        border: none;
        border-radius: 10px;
        cursor: pointer;
    }

    .btn:hover {
        background-color: #d32f2f;
    }

    /* Home button styling */
    .homebtn {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }

    .homebtn a {
        display: inline-block;
        background-color: #a0a0a0;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        text-align: center;
        line-height: 40px;
        color: white;
        font-size: 20px;
        text-decoration: none;
    }

    /* Icon styling for top section */
    .header-icons {
        display: flex;
        justify-content: space-between;
        padding: 20px;
        background-color: #ff5f57;
        border-radius: 10px;
        color: white;
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 30px;
        max-width: 400px;
        margin: 0 auto;
    }

    .header-icons div {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 50px;
        height: 40px;
        border-radius: 45%;
        background-color: #ffffff;
        color: #ff5f57;
        font-size: 24px;
        margin-right: 10px;
    }
</style>

